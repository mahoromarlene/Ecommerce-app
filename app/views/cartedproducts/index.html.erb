<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">

    <table>
      <tr>
        <th>Product name</th>
        <th>Quantity</th>
        <th>Product price</th>
      </tr>
      <% @order.carted_products.each do |cartedproduct| %>
        <tr>
          <td><%= cartedproduct.product.name %></td>
          <td><%= cartedproduct.quantity %></td>
          <td><%= cartedproduct.product.price %></td>
          <td><%= link_to "Remove", "/cartedproducts/#{cartedproduct.id}", method: :delete %></td>
        </tr>
      <% end %>
    </table>
    <%= button_to "Buy Now", "/orders/#{@order.id}", class: "btn btn-success", method: :patch %>
  </div>
</div>



